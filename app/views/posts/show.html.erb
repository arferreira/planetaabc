                      <ol class="commentlist">
                        <% @post.comments.all.each do |comment| %>
                          <li>
                            <div class="comment-body">
                              <figure class="alignleft">
                                  <%= image_tag avatar_url(comment) %>
                              </figure>
                              <div class="comment-authorinfo">
                                <a href="#" class="comment-reply-link fr"><span>Responder</span></a>
                                <abbr class="published fr" title="By June 29, 2012 / 3:30 ">By June 29, 2012 / 3:30</abbr>
                                <h4><%= comment.user_name %></h4>
                              </div>
                              <div class="comment-content">
                                <p><%= comment.body %></p>
                                <div class="cl"></div>
                              </div>
                              <div class="cl"></div>
                            </div>
                          </li>
                        <% end %>
                        <%= render 'comments/form' %>
                      </ol>
